<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="DIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DIV" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="MOSSE FATTE"
            android:layout_width="121dp"
            android:layout_height="29dp"
            android:id="@+id/textView2" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"/>
    <TextView
            android:text="NUMERO VITTORIE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/seekBar"
            android:layout_marginStart="40dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:id="@+id/textView5" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="48dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="GIOCA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.609"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/DIV"
            android:layout_marginStart="40dp"/>
    <view
            class="com.example.scacchiera.ScacchieraView"
            id="@+id/view"
            android:layout_height="0dp" android:layout_width="0dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/ScacchieraV"/>

</android.support.constraint.ConstraintLayout>